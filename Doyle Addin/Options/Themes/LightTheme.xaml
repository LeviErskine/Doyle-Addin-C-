<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light theme brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#f5f5f5" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#000000" />
    <SolidColorBrush x:Key="BorderBrush" Color="#d9d9d9" />

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#f5f5f5" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#e3e3e3" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#C8CED1" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#bababa" />

    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#e4e4e4" />
    <SolidColorBrush x:Key="TextBoxHoverBorderBrush" Color="#929292" />
    <SolidColorBrush x:Key="TextBoxFocusBrush" Color="#7AA2D9" />

    <!-- Info / helper text color for Light theme -->
    <SolidColorBrush x:Key="InfoForegroundBrush" Color="#6E7176" />

</ResourceDictionary>
