<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <RootNamespace>Doyle_Addin_C</RootNamespace>
        <Nullable>enable</Nullable>
        <UseWindowsForms>true</UseWindowsForms>
        <ImplicitUsings>enable</ImplicitUsings>
        <Description>Doyle Addin for print and dxf updates</Description>
        <Company>Doyle MFG</Company>
        <Product>Doyle Inventor Addin</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <OutputPath>C:\ProgramData\Autodesk\Inventor Addins\DoyleAddin\</OutputPath>
      <DocumentationFile>.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <OutputPath>C:\ProgramData\Autodesk\Inventor Addins\DoyleAddin\</OutputPath>
      <DebugType>none</DebugType>
      <DocumentationFile>.xml</DocumentationFile>
      <WarningLevel>1</WarningLevel>
    </PropertyGroup>

    <ItemGroup>
      <Compile Include="My Project\Resources.Designer.vb">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
      <Compile Include="My Project\Settings.Designer.vb">
        <DesignTimeSharedInput>True</DesignTimeSharedInput>
        <AutoGen>True</AutoGen>
        <DependentUpon>Settings.settings</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\DXFUpdateIcon.svg" />
      <EmbeddedResource Include="Resources\ObsoletePrint.svg" />
      <EmbeddedResource Include="Resources\PrintUpdateIcon.svg" />
      <EmbeddedResource Include="Resources\SettingsIcon.svg" />
    </ItemGroup>

    <ItemGroup>
      <None Update="My Project\Settings.settings">
        <CustomToolNamespace>My</CustomToolNamespace>
        <Generator>SettingsSingleFileGenerator</Generator>
        <LastGenOutput>Settings.Designer.vb</LastGenOutput>
      </None>
      <None Include="..\Readme.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
        <Link>Readme.md</Link>
      </None>
      <None Update="My Project\Autodesk.DoyleAddin.Inventor.addin">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="Resources\ObsoleteLibrary.idw">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="Updater.bat">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="My Project\Resources.resx">
        <CustomToolNamespace>My.Resources</CustomToolNamespace>
        <Generator>VbMyResourcesResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.vb</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Options\UserOptionsForm.resx">
        <SubType>Designer</SubType>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Optional Features\" />
    </ItemGroup>

</Project>
